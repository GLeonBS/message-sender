{
  "name": "@message-sender/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:full": "concurrently --names \"API,WEB\" --prefix-colors \"blue,green\" \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "nx serve api",
    "dev:web": "nx dev web",
    "dev:all": "nx run-many --target=serve --all",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "nx serve api --configuration=production",
    "start:web": "nx build web && nx serve web --configuration=production"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
